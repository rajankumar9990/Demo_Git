package com.healthcare.tests;

import com.healthcare.pages.HomePage;
import com.healthcare.utils.ConfigReader;
import com.healthcare.utils.DriverFactory;
import org.testng.Assert;
import org.testng.annotations.*;

public class HomeTests {
    HomePage home;

    @BeforeMethod
    public void setup() {
        DriverFactory.getDriver().get(ConfigReader.get("baseUrl"));
        home = new HomePage();
    }

    @Test
    public void verifySearchBarVisible() {
        Assert.assertTrue(home.isSearchBarDisplayed(), "Search bar not visible!");
    }

    @AfterMethod
    public void tearDown() {
        DriverFactory.quitDriver();
    }
}
