package com.healthcare.pages;

import com.healthcare.utils.DriverFactory;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;

public class ProgramsPage {
    private WebDriver driver;

    // Update this according to actual site menu text
    private By programMenu = By.xpath("//*[@id=\"menu-item-264\"]/a/span[1]");

    // Safer check for page title/heading
    private By pageHeading = By.tagName("h1");

    public ProgramsPage() {
        this.driver = DriverFactory.getDriver();
    }

    public void goToPrograms() {
        driver.findElement(programMenu).click();
    }

    public String getHeading() {
        try {
            return driver.findElement(pageHeading).getText();
        } catch (Exception e) {
            return "";
        }
    }

    public boolean isAtProgramsPage() {
        // Check heading OR page URL
        String heading = getHeading().toLowerCase();
        String url = driver.getCurrentUrl().toLowerCase();

        return heading.contains("program") || url.contains("program");
    }
}
