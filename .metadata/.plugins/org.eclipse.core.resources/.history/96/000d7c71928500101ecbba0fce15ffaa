package com.healthcare.tests;

import com.healthcare.pages.ProgramsPage;
import com.healthcare.utils.ConfigReader;
import com.healthcare.utils.DriverFactory;
import org.testng.Assert;
import org.testng.annotations.*;

public class ProgramsTests {
    ProgramsPage programPage;

    @BeforeMethod
    public void setup() throws Exception {
        DriverFactory.initDriver(ConfigReader.get("browser"));
        DriverFactory.getDriver().get(ConfigReader.get("baseUrl"));
        programPage = new ProgramsPage();
        Thread.sleep(1000);
    }

    @Test
    public void verifyProgramPageNavigation() throws Exception {
        programPage.goToPrograms();
        Assert.assertTrue(programPage.isAtProgramsPage(),
                "Programs page did not load correctly!");
        
        Thread.sleep(1000);
    }

    @AfterMethod
    public void tearDown() {
        DriverFactory.quitDriver();
    }
}
